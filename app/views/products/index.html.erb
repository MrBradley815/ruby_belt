<style media="screen">
    table,th,td{
        border: 1px solid black;
        padding: 5px;
    }
</style>
<a href="/users/<%=current_user.id%>">Go to Dashboard</a> | <a href="/sessions" data-method="delete">Log Out</a>
<h3>Hi <%=current_user.first%></h3>
<h1>All Products</h1>
<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Seller</th>
            <th>Date Posted</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%=product.name%></td>
                <td><%=product.user.first%></td>
                <td><%=product.created_at.strftime("%B %d, %Y")%></td>
                <td><%=number_to_currency(product.price)%></td>
                <td><a href="/products/<%=product.id%>/update" data-method="patch">Buy</a></td>
            </tr>
        <% end %>
    </tbody>
</table>
